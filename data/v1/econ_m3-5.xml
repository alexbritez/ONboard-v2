  <scene id="12" type="Activity_Multiple_Choice">
    <instruction>Click on the correct answer.</instruction>
    <multiple_choice>
      <multiple>
        <question>If the bank charges a nominal interest rate of 7% on real estate loans, and the expected rate of inflation is 4%, what is the real interest rate?</question>
        <answers>
          <answer>11%</answer>
          <answer correct="true">3%</answer>
		  <answer>-3%</answer>
		  <answer>7%</answer>
		  <answer>4%</answer>
        </answers>
        <feedbackAudio>econ_m3-5_s12_FB</feedbackAudio>
      </multiple>
    </multiple_choice>
    <audio>econ_m3-5_s12</audio>
    <credits>(tr)Don Bishop/Photodisc/Getty Images, (bkgd)Maria Toutoudaki/Photodisc/Getty Images.</credits>
  </scene>

  <scene id="13" type="Activity_Multiple_Choice">
    <instruction>Click on the correct answer.</instruction>
    <multiple_choice>
		<multiple>
        <question>The CPI increased from 125 last year to 130 this year. If the nominal interest rate is currently 8%, what is the real interest rate?</question>
        <answers>
          <answer>-4%</answer>
          <answer correct="true">4%</answer>
		  <answer>8%</answer>
		  <answer>12%</answer>
		  <answer>130%</answer>
        </answers>
        <feedbackAudio>econ_m3-5_s13_FB</feedbackAudio>
      </multiple>
    </multiple_choice>
    <audio>econ_m3-5_s13</audio>
    <credits>(tr)Don Bishop/Photodisc/Getty Images, (bkgd)Maria Toutoudaki/Photodisc/Getty Images.</credits>
  </scene>

  <scene id="14" type="End_Multiple_Choice">
    <instruction>Click on the correct answer.</instruction>
    <multiple_choice>
      <multiple>
        <question>Nominal dollars equal amounts that have been adjusted to account for inflation.</question>
        <answers>
          <answer>True</answer>
          <answer correct="true">False</answer>
        </answers>
        <feedbackAudio></feedbackAudio>
      </multiple>
	  <multiple>
        <question>Real dollar adjustments are used for GDP, income, wage, and interest rate comparisons over time.</question>
        <answers>
          <answer correct="true">True</answer>
          <answer>False</answer>
        </answers>
        <feedbackAudio></feedbackAudio>
      </multiple>
	  <multiple>
        <question>High interest rates encourage more borrowing and less saving.</question>
        <answers>
          <answer>True</answer>
          <answer correct="true">False</answer>
        </answers>
        <feedbackAudio></feedbackAudio>
      </multiple>
	  <multiple>
        <question>Low interest rates encourage less borrowing and more saving.</question>
        <answers>
          <answer>True</answer>
          <answer correct="true">False</answer>
        </answers>
        <feedbackAudio></feedbackAudio>
      </multiple>
	  <multiple>
        <question>Interest rates affect consumers more than they do businesses and governments.</question>
        <answers>
          <answer>True</answer>
          <answer correct="true">False</answer>
        </answers>
        <feedbackAudio></feedbackAudio>
      </multiple>
	  <multiple>
        <question>If the interest rate being charged on the loan is lower than the inflation rate, the borrower actually benefits from the transaction.</question>
        <answers>
          <answer correct="true">True</answer>
          <answer>False</answer>
        </answers>
        <feedbackAudio></feedbackAudio>
      </multiple>
	  <multiple>
        <question>If the interest rate is higher than the inflation rate over a time period, then the value of the money increases.</question>
        <answers>
          <answer correct="true">True</answer>
          <answer>False</answer>
        </answers>
        <feedbackAudio></feedbackAudio>
      </multiple>
	  <multiple>
        <question>The real interest rate is calculated by subtracting the inflation rate from the nominal interest rate.</question>
        <answers>
          <answer correct="true">True</answer>
          <answer>False</answer>
        </answers>
        <feedbackAudio></feedbackAudio>
      </multiple>
	  <multiple>
        <question>If the bank charges a nominal interest rate of 5.5% on auto loans, and the expected rate of inflation is 3%, then the real interest rate is 1.5%.</question>
        <answers>
          <answer>True</answer>
          <answer correct="true">False</answer>
        </answers>
        <feedbackAudio></feedbackAudio>
      </multiple>
	  <multiple>
        <question>Interest rates are essentially the "price" of money.</question>
        <answers>
          <answer correct="true">True</answer>
          <answer>False</answer>
        </answers>
        <feedbackAudio></feedbackAudio>
      </multiple>
    </multiple_choice>
