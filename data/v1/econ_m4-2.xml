  <scene id="10" type="End_Multiple_Choice">
    <instruction>Click on the correct answer.</instruction>
    <multiple_choice>
      <multiple>
        <question>Which of these is a two-step equation?</question>
        <answers>
          <answer><![CDATA[<em>x</em> + 9 = 21]]></answer>
		  <answer><![CDATA[<em>x</em> = 11]]></answer>
          <answer correct="true"><![CDATA[2<em>x</em> + 9 = 21]]></answer>
		  <answer><![CDATA[<em>x</em> – 9 = 21]]></answer>
		  <answer><![CDATA[21 = 3<em>x</em>]]></answer>
        </answers>
        <feedbackAudio></feedbackAudio>
      </multiple>
	  <multiple>
        <question>Which of these is a one-step equation?</question>
        <answers>
          <answer><![CDATA[<em>y</em> = 47]]></answer>
		  <answer><![CDATA[2<em>y</em> + 7 = 47]]></answer>
		  <answer><![CDATA[2<em>y</em> – 7 = 47]]></answer>
          <answer correct="true"><![CDATA[47 = <em>y</em> – 7]]></answer>
		  <answer><![CDATA[47 = 2<em>y</em> – 7]]></answer>
        </answers>
        <feedbackAudio></feedbackAudio>
      </multiple>
	  <multiple>
        <question><![CDATA[To solve 2<em>x</em> + 9 = 21, what is the first step?]]></question>
        <answers>
          <answer>dividing each side by 2</answer>
          <answer correct="true">subtracting 9 from each side</answer>
		  <answer>adding 9 to each side</answer>
		  <answer><![CDATA[dividing each side by <em>x</em>]]></answer>
		  <answer>multiplying each side by 2</answer>
        </answers>
        <feedbackAudio></feedbackAudio>
      </multiple>
	  <multiple>
        <question><![CDATA[In the equation 4<em>n</em> + 3 = 55, what is the value of <em>n</em>?]]></question>
        <answers>
          <answer>11</answer>
		  <answer>12</answer>
          <answer correct="true">13</answer>
		  <answer>14</answer>
		  <answer>15</answer>
        </answers>
        <feedbackAudio></feedbackAudio>
      </multiple>
	  <multiple>
        <question><![CDATA[What two operations are needed to solve 3<em>x</em> + 15 = 27?]]></question>
        <answers>
          <answer correct="true">subtraction and division</answer>
		  <answer>addition and subtraction</answer>
		  <answer>addition and division</answer>
		  <answer>subtraction and multiplication</answer>
		  <answer>addition and multiplication</answer>
        </answers>
        <feedbackAudio></feedbackAudio>
      </multiple>
    </multiple_choice>
