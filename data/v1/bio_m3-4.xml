      <multiple_choice>
         <multiple>
            <question><![CDATA[What does the <em>m</em> stand for in the following equation: <br/>Y = mX + b?]]></question>
            <answers>
               <answer>Line length</answer>
               <answer correct="true">Slope</answer>
			   <answer>Rise</answer>
			   <answer>Run</answer>
			   <answer>Angle</answer>
            </answers>
            <feedbackAudio></feedbackAudio>
         </multiple>
		 <multiple>
            <question>Which statement describes slope?</question>
            <answers>
               <answer correct="true">Rise divided by run</answer>
			   <answer>Run divided by rise</answer>
			   <answer>Rise plus run divided by angle</answer>
			   <answer>Difference between rise and run</answer>
			   <answer>Difference between angle and run</answer>
            </answers>
            <feedbackAudio></feedbackAudio>
         </multiple>
		 <multiple>
            <question>The horizontal change between two points on a line is</question>
            <answers>
               <answer>rise.</answer>
               <answer correct="true">run.</answer>
