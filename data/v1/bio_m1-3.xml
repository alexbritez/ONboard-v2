   <scene id="16" type="End_Multiple_Choice">
    <instruction>Click on the correct answer.</instruction>
      <multiple_choice>
         <multiple>
            <question>Living things</question>
            <answers>
               <answer>use energy.</answer>
			   <answer>use molecular building blocks.</answer>
			   <answer>use homeostasis.</answer>
               <answer correct="true">All the above.</answer>
            </answers>
            <feedbackAudio></feedbackAudio>
         </multiple>
		 <multiple>
            <question>Energy for living things comes from</question>
            <answers>
               <answer correct="true">chemical bonds.</answer>
			   <answer>water.</answer>
			   <answer>oxygen.</answer>
			   <answer>hydrogen.</answer>
            </answers>
            <feedbackAudio></feedbackAudio>
         </multiple>
		 <multiple>
            <question>Organisms use energy to do all of the following except</question>
            <answers>
               <answer>reproduce.</answer>
			   <answer>grow.</answer>
               <answer correct="true">decay.</answer>
			   <answer>homeostasis.</answer>
            </answers>
            <feedbackAudio></feedbackAudio>
         </multiple>
		 <multiple>
            <question>A molecule that temporarily stores energy is</question>
            <answers>
               <answer>amino acid.</answer>
               <answer correct="true">ATP.</answer>
			   <answer>glucose.</answer>
			   <answer>water.</answer>
            </answers>
            <feedbackAudio></feedbackAudio>
         </multiple>
		 <multiple>
            <question>Life can reproduce</question>
            <answers>
               <answer>asexually.</answer>
			   <answer>sexually.</answer>
               <answer correct="true">either asexually or sexually depending on the specific organism.</answer>
            </answers>
            <feedbackAudio></feedbackAudio>
         </multiple>
      </multiple_choice>
